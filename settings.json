{
  // ESLINT SETTINGS -------------------------------------------
  // "eslint.enable": false,
  "eslint.validate": ["typescript", "javascript"],
  "eslint.format.enable": true,
  // ----------------LANGUAGE SETTINGS---------------------------
  "html.completion.attributeDefaultValue": "doublequotes",
  "html.autoCreateQuotes": true,
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  // --------------------  JAVASCRIPT ---------------------
  // "javascript.format.insertSpaceAfterOpeningAndBeforeClosingJsxExpressionBraces": true,
  // "javascript.inlayHints.enumMemberValues.enabled": true,
  // "javascript.inlayHints.functionLikeReturnTypes.enabled": true,
  "js/ts.implicitProjectConfig.experimentalDecorators": true,
  "javascript.preferences.quoteStyle": "single",
  "javascript.referencesCodeLens.enabled": true,
  // "javascript.referencesCodeLens.showOnAllFunctions": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.format.semicolons": "remove",
  // "javascript.format.insertSpaceAfterSemicolonInForStatements": false,
  // --------------------- EDITOR -----------------------------
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
    // "editor.codeActionsOnSaveTimeout" : true,
  },
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs":"active",
  "editor.formatOnType": true,
  "editor.cursorBlinking": "phase",
  // "editor.fontLigatures": true,
  // "editor.fontLigatures": "'calt', 'ss01'", // this is the cursive italics
  "editor.fontLigatures": "'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'zero', 'onum'",
  "editor.wordWrap": "on",
  "editor.cursorSmoothCaretAnimation": true,
  "editor.fontFamily": "'Cascadia Code', 'consolas', monospace",
  "editor.formatOnPaste": true,
  "editor.smoothScrolling": true,
  "editor.minimap.maxColumn": 20,
  "editor.minimap.size": "fit",
  "editor.minimap.renderCharacters": true,
  "editor.minimap.enabled": true,
  "editor.minimap.scale": 1,
  "editor.minimap.side": "right",
  "editor.minimap.showSlider": "always",
  "editor.suggestSelection": "recentlyUsed",
  "editor.matchBrackets": "never",
  "editor.tabCompletion": "on",
  "emmet.triggerExpansionOnTab": true,
  "editor.folding": false, // switch off the code folding feature
  "editor.lineHeight": 25,
  "editor.find.autoFindInSelection": "multiline",
  "explorer.confirmDelete": false,
  // ---------------------- ETC EXTENSION SETTINGS ------------
  "colorHelper.disableGpu": 1,
  // --------------------- TERMINAL ---------------------------
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.confirmOnExit": "hasChildProcesses",
  "terminal.integrated.fontFamily": "PowerlineSymbols, 'mononoki Nerd Font Mono', monospace",
  "terminal.integrated.autoReplies": {
    "[Oh My Zsh] Would you like to check for updates? [Y/n]": "Y\r"
  },
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.tabs.location": "left",
  "terminal.external.windowsExec": "C:\\windows\\System32\\powershell.exe",
  // --------------------- VSCODE SETTINGS -------------------------
  "security.workspace.trust.untrustedFiles": "open",
  "git.enableSmartCommit": true,
  "breadcrumbs.icons": false,
  "window.restoreWindows": "folders",
  "explorer.incrementalNaming": "smart",
  "vsicons.dontShowNewVersionMessage": false,
  "files.autoSave": "off",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorCustomizations": {
    "editor.selectionBackground": "#8f3fbe31",
    "editor.selectionHighlightBackground": "#ff4b7254",
    "editor.findMatchBackground": "#006b6b",
    "editor.findMatchHighlightBackground": "#0d929242"
  },
  "workbench.statusBar.visible": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.colorTheme": "Ayu Mirage",
  "workbench.preferredLightColorTheme": "Horizon Bright Italic",
  "workbench.preferredDarkColorTheme": "Ayu Mirage",
  "workbench.editor.untitled.hint": "hidden",
  "workbench.list.smoothScrolling": true,
  "workbench.editor.wrapTabs": true,
  // ----------------------GIT-----------------------
  "git.autofetch": true,
  "gitlens.views.branches.avatars": false,
  "git.autoStash": true,
  "git.enableStatusBarSync": false,
  "git.inputValidationSubjectLength": null,
  "git.requireGitUserConfig": false,
  "git.showPushSuccessNotification": true,
